<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.hari.coursesforum.UserProfile">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/user_profile_image"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Name"
        android:textSize="20sp"
        android:text="Name"
        android:padding="10dp"
        android:textColor="#009688"
        android:layout_below="@+id/user_profile_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/user_profile_image"
        android:text="Hello"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useremail"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/username"
        android:text="Hello"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/Email"
        android:layout_toEndOf="@+id/Email" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/logout_button"
        android:text="Logout"
        android:textColor="#000000"
        android:background="@drawable/common_google_signin_btn_text_dark"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Email"
        android:textSize="20sp"
        android:text="Email"
        android:padding="10dp"
        android:textColor="#009688"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/useremail"
        android:layout_alignBottom="@+id/useremail"
        android:layout_toStartOf="@+id/username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dept"
        android:textSize="20dp"
        android:id="@+id/deptname"
        android:layout_below="@+id/Email"
        android:layout_alignStart="@+id/logout_button"
        android:layout_marginStart="01dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userdept"
        android:text="hello"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/deptname"
        android:layout_alignBottom="@+id/deptname"
        android:layout_toEndOf="@+id/Email"
        android:layout_marginStart="12dp" />

</RelativeLayout>