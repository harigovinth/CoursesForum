<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPaddingBottom="5dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFC107"
            android:text="course_name"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="course_description"
            android:textSize="15sp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/facultyName"
            android:layout_alignStart="@+id/facultyName" />

        <TextView
            android:id="@+id/facultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="faculty_name"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/courseName"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="department_name"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="15dp"
            android:layout_alignBaseline="@+id/facultyName"
            android:layout_alignBottom="@+id/facultyName"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>