<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profileimage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apps.hari.coursesforum.Profileimage"
    tools:showIn="@layout/activity_profileimage">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take new"
        android:id="@+id/takenew"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center_vertical|center_horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Existing"
        android:id="@+id/upload"
        android:layout_gravity="center"
        android:layout_marginEnd="26dp"
        android:layout_alignBaseline="@+id/takenew"
        android:layout_alignBottom="@+id/takenew"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
