<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.hari.coursesforum.TeacherHome">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height= "200dp"
        android:id="@+id/btn_courses"
        android:background="@drawable/ic_assignment_black"
        />

    <TextView
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:text="Existing Courses"
        android:paddingLeft="6dp"
        android:textSize="20dp"
        android:background="#F98321"
        android:layout_alignBottom="@+id/btn_courses"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:id="@+id/btn_new_course"
        android:background="@mipmap/ic_launcher"
        android:layout_below="@+id/btn_courses"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="65dp" />
</RelativeLayout>
